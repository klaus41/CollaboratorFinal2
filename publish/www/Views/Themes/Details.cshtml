@model WebUI.Models.Theme

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Theme</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

    </dl>
    <hr/>
    <strong>Kriterier</strong>
    <ul>
        @foreach (var sc in Model.SearchCriterias)
        {
            <li> @Html.DisplayFor(modelItem => sc.Criteria) </li>
        
        }
    </ul>
    <hr/>
    <strong>Email</strong>
    <ul>
    @foreach (var m in Model.Emails)
    {
        <li> @Html.DisplayFor(modelItem => m.Subject) </li>

    }
        </ul>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
